extends ../layout/index
block contenido
    .bpy-10 
        h1.text-4xl.my-10.font-extrabold.text-center Bienes 
            spam.font-normal SENA
        h2.text-center.text-2xl.font-extrabold=tituloPagina

        .mt-8.mx-auto.max-w-md  
            .bg-white.py-8.px-4.shadow 
                form.space-y-5(action="/auth/register", method="post" noValidate)
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div 
                        label.block.text-sm.uppercae.text-gray-500.mb-3.font-bold(for="name") Nombre
                        input#name.w-full.px-3.py-2.border.border-gray-300.rounded-full.placeholder-gray-400(placeholder="Escribe tu Nombre" type="name" name="nombre")

                    div 
                        label.block.text-sm.uppercae.text-gray-500.mb-3.font-bold(for="email") Email de Registro 
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-full.placeholder-gray-400(placeholder="Escribe tu Email" type="email" name="email")

                    div 
                        label.block.text-sm.uppercae.text-gray-500.mb-3.font-bold(for="password") Contrase単a 
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-full.placeholder-gray-400(placeholder="Escribe tu Contrase単a" type="password" name="password")

                    div 
                        label.block.text-sm.uppercae.text-gray-500.mb-3.font-bold(for="repeat_password") Repite la contrase単a 
                        input#repeat_password.w-full.px-3.py-2.border.border-gray-300.rounded-full.placeholder-gray-400(placeholder="Repite tu Contrase単a" type="password" name="repeat_password")

                    .flex.items-center.justify-center
                        a.text-gray-500.text-xs(href="/auth/login") Ya tengo cuenta
                    input(class="w-full bg-indigo-600  hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" value="Registrarse" type="submit")